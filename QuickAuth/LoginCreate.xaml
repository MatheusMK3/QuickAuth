<Window x:Class="QuickAuth.LoginCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickAuth"
        mc:Ignorable="d"
        Title="Connect to Network..." Height="183.333" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Name="BindLUsername" Content="Username" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <TextBox Name="BindUsername" HorizontalAlignment="Left" Height="23" Margin="10,31,0,0" VerticalAlignment="Top" Width="272" />
        <Label Name="BindLPassword" Content="Password" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="BindPassword" HorizontalAlignment="Left" Height="23" Margin="10,85,0,0" VerticalAlignment="Top" Width="272"/>
        <Button Name="BindBtnConnect" Content="Connect" HorizontalAlignment="Left" Margin="207,121,0,0" VerticalAlignment="Top" Width="75" IsDefault="True"/>
    </Grid>
</Window>
